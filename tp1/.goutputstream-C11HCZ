<?php
function initialPlateau() {
	
	for ($i = 0; $i < 20; $i++) {
		//inclure fonction random
		$plateau[] = " ";
		for ($j = 0; $j <20; $j++) {
			$plateau[$i][] = " ";
		}
	}
	
	return $plateau;
}

function calculVoisins($plateau, $posX, $posY) {
	$nbVoisins = 0;
	
	for ($i = $posY - 1; $i <= $posY + 1; $i++) {
		if ($i == -1) $i++;
		else if ($i == count($plateau) - 1) break;
		
		for ($j = $posX - 1; $j <= $posX + 1; $j++) {
			if($j == 0) $j++;
			else if ($j == count($plateau) - 1) break;
			
			if ($plateau[$i][$j] == 1) $nbVoisins++;
		}
	}
	
	return $nbVoisins;
}

function stateCell($plateau, $posX, $posY) {
	$nbVoisins = calculVoisins($plateau, $posX, $posY);
	
	if ($plateau[$posX][$posY] == 1) {
		if ($nbVoisins < 2 || $nbVoisins > 3) return 0;
		else return 1;
	}
	else {
		if ($nbVoisins == 3) return 1;
	}
}



?>
