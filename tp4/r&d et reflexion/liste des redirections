page register {
    connexion                       redirige vers login                 (pas de parametre : controleur detruit session actuelle)
    valider                         redirige vers login                 (post : login & rank & password & passwordCheck)
}

page login {
    inscription                     redirige vers register
    valider                         redirige vers login                 (post : login & password)
    [confirm] aller à l'accueil     redirige vers eventsMonth
}

***

page eventsMonth (accueil) {
    déconnexion                     redirige vers login                 (pas de parametre : controleur detruit session actuelle)
    mois en cours                   redirige vers eventsMonth           (pas de parametre : mois actuel)
    changer de mois                 redirige vers eventsMonth avec :    date (y-m)
    voir liste événements           redirige vers eventsDay avec :      date (y-m-d)
    voir détail événement           redirige vers event avec :          idEvent

    [orga] créer événement          redirige vers newEvent avec :       date (y-m-d)
}

page eventsDay (jour) {
    déconnexion                     redirige vers login
    accueil                         redirige vers eventsMonth
    revenir au mois                 redirige vers eventsMonth avec :    date (y-m)
    changer de jour                 redirige vers eventsDay avec :      date (y-m)
    voir détail événement           redirige vers event avec :          idEvent

    [orga] créer événement          redirige vers newEvent avec :       date (y-m)
}

page event {
    déconnexion                     redirige vers login
    accueil                         redirige vers eventsMonth
    revenir au mois                 redirige vers eventsMonth avec :    date (y-m)
    revenir au jour                 redirige vers eventsDay avec :      date (y-m-d)
    changer d'événement             redirige vers event avec :          idEvent (-> trouve l'event juste avant)

    [client] se (dés)inscrire       redirige vers event avec :          idEvent (post : idEvent & actualStatus)

    [orga] éditer l'événement       redirige vers editEvent avec :      idEvent
    [orga] supprimer l'événement    redirige vers deleteEvent avec :    idEvent
}

[orga] page newEvent {
    déconnexion                     redirige vers login
    accueil                         redirige vers eventsMonth
    annuler creation                redirige vers eventsMonth avec :    date (y-m)
    valider creation                redirige vers event avec :          idEvent (post : title & nbPlaces & datestart & dateend & description)
}                            

[orga] page editEvent {
    déconnexion                     redirige vers login
    accueil                         redirige vers eventsMonth
    annuler modifs                  redirige vers event avec :          idEvent
    valider modifs                  redirige vers event avec :          idEvent (post contient : nbPlaces & dateend & description)
}

[orga] page deleteEvent {
    déconnexion                     redirige vers login
    accueil                         redirige vers eventsMonth
    annuler suppression             redirige vers event avec :          idEvent
    valider suppression             redirige vers eventsDay avec :      date (y-m-d)
}